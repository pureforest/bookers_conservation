<body class="index_main">
<h1>Books</h1>
<table class="table">
  <!--<thead>-->
    <tr class="tr">
      <th class="title">Title</th>
      <th class="body">Body</th>
      <!--#<th colspan="3"></th>-->
      <th><br /></th>
    </tr>
  <!--</thead>-->

<!--<tbody>-->
<% @books.each do |book| %>
 <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td class="index_show">
         <%= link_to 'Show', book_path(book.id) %>
         <%= link_to 'Edit', edit_book_path(book) %>
         <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => 'Are you sure?'  %>
     </td>
 </tr>
 <% end %>
 <!--</tbody>-->
 </table>
 
<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>
</body>
